@import 'constants.styl'
@import 'fonts.styl'
@import 'buttons.styl'
@import 'utils.styl'

page-root()
  // box-sizing content-box
  width 100%
  padding-top 30px
  padding-bottom 70px
  padding-inline 'max(calc((100vw - %s) / 2), %s)' % (pageMaxWidth pageMinHorizontalPadding)

  @media ({mobile})
    padding-inline 'max(calc((100vw - %s) / 2), %s)' % (pageMaxWidth pageMinHorizontalPaddingMobile)

page-root-disable()
  margin-inline 'min(calc((100vw - %s) / -2), -%s)' % (pageMaxWidth pageMinHorizontalPadding)

  @media ({mobile})
    margin-inline 'min(calc((100vw - %s) / -2), -%s)' % (pageMaxWidth pageMinHorizontalPaddingMobile)

block(colorBorder=colorBorder)
  display block
  padding 15px
  header
    font-medium()
    font-bold()
  section
    font-medium()

block-shadow()
  block()

  box-shadow 0 0 10px 2px colorShadow

block-bg(colorBgLight=colorBlockBg)
  block()

  display block
  background colorBgLight

block-bg-shadow()
  block-bg()
  block-shadow()


input()
  input-no-styles()

  cursor text
  display flex
  align-items center
  height 45px
  margin 0
  padding 0 15px
  border none
  color colorText1
  background colorBlockBg
  font-small()

  &::placeholder
    color colorText2

  &:focus
    border-color colorEmp1
    // color colorEmp1
    background colorSuccessBg
  &.error
    border-color colorError
  &.success
    border-color colorSuccess
  &[disabled]:not([disabled="false"])
    cursor default
    color colorText2
    background mix(colorBlockBg, transparent, 10%)

  trans()
